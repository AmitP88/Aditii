{{ 'component-mobile-product-slideshow.css' | asset_url | stylesheet_tag }}

<div class="mobile-product-slideshow">
  <div class="mobile-product-slideshow__container">
    <div class="mobile-product-slide fade">
      <div class="text">1</div>
    </div>

    <div class="mobile-product-slide fade">
      <div class="text">2</div>
    </div>

    <div class="mobile-product-slide fade">
      <div class="text">3</div>
    </div>

    <div class="mobile-product-slide fade">
      <div class="product-image">{{ all_products['cowhide-standard-crew'].featured_image | img_url: 'master' | img_tag }}</div>
      <div class="product-info">
        <h1 class="product-info__title">{{ all_products['cowhide-standard-crew'].title }}</h1>
        <p class="product-info__description">{{ all_products['cowhide-standard-crew'].description }}</p>
        <a href="{{ all_products['cowhide-standard-crew'].url }}">
          <button>Shop Now</button>
        </a>
      </div>
    </div>

    <div class="mobile-product-slide fade">
      <div class="text">5</div>
    </div>

  </div>
  <br>

  <div style="text-align:center">
    <span class="mobileDot" onclick="currentMobileSlide(1)"></span>
    <span class="mobileDot" onclick="currentMobileSlide(2)"></span>
    <span class="mobileDot" onclick="currentMobileSlide(3)"></span>
    <span class="mobileDot" onclick="currentMobileSlide(4)"></span>
    <span class="mobileDot" onclick="currentMobileSlide(5)"></span>
  </div>
</div>

<script>
  let mobileSlideIndex = 4;
  showMobileSlides(mobileSlideIndex);

  // Next/previous controls
  function mobilePlusSlides(n) {
    showMobileSlides(mobileSlideIndex += n);
  }

  // Thumbnail image controls
  function currentMobileSlide(n) {
    showMobileSlides(MobileSlideIndex = n);
  }

  function showMobileSlides(n) {
    let i;
    let mobileSlides = document.getElementsByClassName("mobile-product-slide");
    let mobileDots = document.getElementsByClassName("mobileDot");
    if (n > mobileSlides.length) {mobileSlideIndex = 1}
    if (n < 1) {mobileSlideIndex = mobileSlides.length}
    for (i = 0; i < mobileSlides.length; i++) {
      mobileSlides[i].style.display = "none";
    }
    for (i = 0; i < mobileDots.length; i++) {
      mobileDots[i].className = mobileDots[i].className.replace(" active", "");
    }

    mobileSlides[mobileSlideIndex-1].style.display = "block";
    mobileDots[mobileSlideIndex-1].className += " active";
  }
</script>