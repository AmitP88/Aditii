{{ 'section-collections-slider.css' | asset_url | stylesheet_tag }}

<div class="collections-slider">
<!-- Slideshow container -->
<div class="collections-slider__container">

  <!-- Full-width images with number and caption text -->
  <div class="collections-slider__container-slide collections-slider__fade">
    <div class="text">Caption Text</div>
  </div>

  <div class="collections-slider__container-slide collections-slider__fade">
    <div class="text">Caption Two</div>
  </div>

  <div class="collections-slider__container-slide collections-slider__fade">
    <div class="text">Caption Three</div>
  </div>

  <!-- Next and previous buttons -->
  <a class="collections-prev" onclick="CollectionsplusSlides(-1)">&#10094;</a>
  <a class="collections-next" onclick="CollectionsplusSlides(1)">&#10095;</a>
</div>
<br>

</div>

<script>
  let CollectionslideIndex = 1;
  CollectionshowSlides(CollectionslideIndex);

// Next/previous controls
function CollectionsplusSlides(n) {
  CollectionshowSlides(CollectionslideIndex += n);
}

// Thumbnail image controls
function CollectioncurrentSlide(n) {
  CollectionshowSlides(CollectionslideIndex = n);
}

function CollectionshowSlides(n) {
  let i;
  let Collectionslides = document.getElementsByClassName("collections-slider__container-slide");
  if (n > Collectionslides.length) {CollectionslideIndex = 1}
  if (n < 1) {CollectionslideIndex = Collectionslides.length}
  for (i = 0; i < Collectionslides.length; i++) {
    Collectionslides[i].style.display = "none";
  }
  Collectionslides[CollectionslideIndex-1].style.display = "block";
}
</script>

{% schema %}
  {
    "name": "Collection Slider",
    "tag": "section",
    "presets": [
      {
        "name": "collections-slider"        
      }
    ]
  }
{% endschema %}